#include <iostream>
#include <cmath>
#include <iomanip>
#include <cstdlib>
using namespace std;

bool Generator(uint64_t num)
{
    if (num<2)
        return false;
    if (num<4)
        return true;
    if ((num & 1)==0)
        return false;
    for(uint64_t i=3; i<=(uint64_t) sqrt(num); i+=2)
        if ((num % i) ==0)
            return false;
    return true;
}

template <typename T>T BitCount (T input)
{

    T res = 0;
    static const unsigned shift_size = ((sizeof(T) * 8) - 1);

    if(input < 0) {
        res ++;
        input &= ( (1 << shift_size) - 1 );
    }

    while(input) {
        res += (input & 1);
        input >>= 1;
    }

    return res;
}


int main ()
{
    uint64_t num;

    for (num = 1; num <= 0xFFFFFFFFFFFFFFFF; num++) {
        if (Generator(num) && BitCount(num) == 3) {
            cout <<"dec: "<< dec << num << "\t" <<"hex: "<< hex << num << endl;

        };
    }
    return 0;
}
